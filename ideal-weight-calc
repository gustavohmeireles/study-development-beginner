inicio

real altura
real peso_ideal
caractere sexo
	mostrar "Digite m para masculino, ou f para feminino"
		receber sexo
			se sexo = m entao
				mostrar "digite sua altura em metros"
				receber altura
				calcular peso ideal = (72.7 * altura) - 58
				mostrar peso ideal
			se sexo = f entao
				mostrar "digite sua altura em metros"
				receber altura
				calcular peso ideal = (62.1 * altura) - 44.7
				mostrar peso ideal
			senao
			mostrar "letra digitada Ã© diferente de M ou F"
retorno 0;

sair
